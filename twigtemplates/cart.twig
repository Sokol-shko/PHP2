<h2>Корзина</h2>
{% set goodsSum = 0 %}
{% set totalSum = 0 %}
{% if not cart is empty %}
    {% for item in cart %}
    <div id="{{ item.cart_id }}">
        <p>Товар: {{ item.name }}</p>
        <p>Цена: {{ item.price }} рублей</p>
        <input type="number" name="count" step="1" min="1" max="10" value="{{ item.count }}">шт
        {% set goodsSum = item.price * item.count %}
        {% set totalSum = totalSum + goodsSum %}
        <button data-id="{{ item.cart_id }}" class="remove">Удалить товар из корзины</button>
        <p>Сумма: <span id="goods_sum">{{ goodsSum }}</span> рублей</p>
        <br>
    </div>
    {% endfor %}
    <h3 id="total_sum__h3">Итого: <span id="total_sum">{{ total_sum }}</span> рублей</h3>
    <button id="place_order">Оформить</button>
{% else %}
    <p>Корзина пуста</p>
{% endif %}


<script>
    "use strict";
    let btn_remove = document.querySelectorAll('.remove');
    btn_remove.forEach((elem) => {
        elem.addEventListener('click', () => {
            let id = elem.getAttribute('data-id');
            (
                async () => {
                    const response = await fetch('/cart/remove', {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json;charset=utf-8'},
                        body: JSON.stringify({
                            id: id
                        })
                    });
                    const answer = await response.json();
                    document.getElementById('count').innerText = answer.count;
                    document.getElementById('total_sum').innerText = answer.total_sum;

                    if (answer.count < 1) {
                        document.getElementById('total_sum__h3').innerText = 'Корзина пуста';
                        document.getElementById('place_order').remove();
                    }

                    let remove_product = document.getElementById(id);
                    remove_product.remove();
                }
            )();
        })
    })
</script>